<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="317dp"
        android:text="enter numbers!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bad"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="285dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bsu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <Button
        android:id="@+id/bsu"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="42dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/bad"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <Button
        android:id="@+id/bmu"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="41dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/bsu"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <Button
        android:id="@+id/bdi"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="250dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/bmu" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="224dp"
        android:layout_height="58dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:hint="1st number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="219dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="2nd number"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="136dp"
        android:layout_height="37dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="196dp"
        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        android:text="result"
        android:textAlignment="center"
        android:textColor="#CCE9A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>